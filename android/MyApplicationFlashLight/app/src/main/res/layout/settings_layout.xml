    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="250px">

    </android.support.v7.widget.LinearLayoutCompat>

</LinearLayout>