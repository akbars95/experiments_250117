<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="crimeintent.android.mtsmda.com.flashlightapplication.MainActivity">

    <ToggleButton
        android:id="@+id/onOffFlashlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/flashlight_off"
        android:textOff="@string/flashlight_on"
        android:checked="false"
        android:text="@string/flashlight_text"/>

</LinearLayout>
